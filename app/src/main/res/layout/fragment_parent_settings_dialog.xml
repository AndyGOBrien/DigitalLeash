<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="fragments.dialogs.ParentSettingsDialogFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/specify_location_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Specify Location" />

            <EditText
                android:id="@+id/latitude_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:inputType="textPersonName|numberSigned|numberDecimal"
                android:hint="0.0"
                android:visibility="gone" />

            <EditText
                android:id="@+id/longitude_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:inputType="numberSigned|numberDecimal"
                android:hint="0.0"
                android:visibility="gone" />

            <Button
                android:id="@+id/switch_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch Parent" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
